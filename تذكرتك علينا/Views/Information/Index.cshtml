@model تذكرتك_علينا.Models.Searchmodel

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        display: grid;
        place-items: center;
        height: 100vh;
    }
    .b {
        background-image: url('https://th.bing.com/th/id/OIP.YzKUeUC7Ae1JYtRfX3UMyQHaEP?w=294&h=180&c=7&r=0&o=5&dpr=1.1&pid=1.7');
        height: 400px;
        width:auto
        color: black;
        font-weight: 500;
        font-size: 20px;
        padding: 15px;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .a {
        
        height: auto;
        width:auto;
        color: black;
        font-weight: 500;
        font-size: 20px;
        padding: 15px;
        background-repeat: no-repeat;
        background-size: cover;
        position:center;
    }
</style>
<div class="b">
</div>
<div class="a">
<h1 >    ___________________________الجماهير______________________________            </h1>

<p>
    <a asp-action="Create">تذكرتك من هنا</a>
</p>
<form asp-controller="Information" asp-action="Index" method="get">
    <p>

        <select asp-for="Type" asp-items="Model.name">
            <option value="">كلا الفريقين </option>
        </select>

        : اسم المشجع  : <input type="text" asp-for="SearchString" />   النادي
        <input type="submit" value="بحث" />
    </p>
</form>
<br />
<table class="table" style="border-color:brown; border-block:solid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Match![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match![0].YOurTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match![0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match![0].Phone)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Match!)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YOurTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
